{
  "name": "pr-sheriff",
  "version": "0.1.0",
  "description": "GitHub App backend for automated PR review workflows",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test:webhook": "node scripts/test-webhook.js"
  },
  "keywords": [
    "github",
    "github-app",
    "pull-request",
    "slack",
    "automation"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@fastify/type-provider-typebox": "^3.4.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "undici": "^7.19.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "eslint": "^9.15.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0"
  }
}
